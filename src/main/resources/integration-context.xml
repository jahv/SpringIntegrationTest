<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration-4.3.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

    <context:component-scan base-package="com" />

    <int:channel id="inputChannel">
        <int:queue capacity="10" />
    </int:channel>
    <!--<int:channel id="outputChannel"/>-->

    <int:gateway id="gateway" service-interface="com.jahv.PrinterGateway" default-request-channel="inputChannel" />

    <!--<int:service-activator ref="printService" method="print"-->
                           <!--input-channel="inputChannel" output-channel="outputChannel" />-->

    <int:service-activator ref="printService" method="print" input-channel="inputChannel">
        <int:poller fixed-rate="5" time-unit="SECONDS" max-messages-per-poll="2" />
    </int:service-activator>

</beans>